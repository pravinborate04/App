<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mastek.appengage.device.DeviceFragment">


    <ImageView
        android:id="@+id/imgCalenderEvents1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_filter"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/btnDateRangeEvents1"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabEvents"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerEvents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>


</LinearLayout>
